{
  "name": "@apps/server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "src",
    "types"
  ],
  "_moduleAliases": {
    "@api-types": "dist/types"
  },
  "scripts": {
    "lint": "eslint \"./src/**/*.{js,ts,json}\"",
    "format": "prettier --write \"./src/**/*.{js,ts,json,md}\"",
    "pre-commit": "lint-staged",
    "knex:make": "knex  --migrations-directory ./src/db/migrations/ migrate:make $name -x ts",
    "knex:migrate": "env $(cat .env) knex migrate:latest --knexfile ./src/db/knexfile.ts",
    "knex:rollback": "env $(cat .env) knex migrate:rollback --knexfile ./src/db/knexfile.ts",
    "knex:seed": "env $(cat .env) knex seed:run --knexfile ./src/db/knexfile.ts",
    "build": "tsc",
    "serve": "NODE_ENV=production tsc && node dist/index.js",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "./**/*.(js|jsx|ts|tsx|json)": [
      "pnpm lint --fix",
      "pnpm format"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.29",
    "@types/express-session": "^1.17.4",
    "@types/node": "^18.0.0",
    "@types/passport": "^1.0.9",
    "@types/passport-local": "^1.0.34",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "csurf`": "link:@types/csurf`",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^5.0.1",
    "connect-pg-simple": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "helmet": "^5.1.0",
    "knex": "^2.1.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "socket.io": "^4.5.1",
    "uuid": "^8.3.2",
    "winston": "^3.8.1"
  }
}
